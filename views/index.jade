                tr: th Striped table
              tbody
                tr: td Row 1
                tr: td Row 2
                tr: td Row 3
                tr: td Row 4
                tr: td Row 5
                tr: td Row 6
          .col.lg33
            table.table
              thead
                tr: th Standard table
              tbody
                tr: td Row 1
                tr: td Row 2
                tr: td Row 3
                tr: td Row 4
                tr: td Row 5
                tr: td Row 6
      h2 Images
      section.container
        .grid
          .row
            .col.lg50
              img(src='https://placehold.it/150x100').image
              img(src='https://placehold.it/100x100').image.round
            .col.lg50
              img(src='https://placehold.it/150x100').image.sm
              img(src='https://placehold.it/70x70').image.round.sm
